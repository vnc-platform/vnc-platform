{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "NODE_ENV",
    "APP_ENV",
    "DATABASE_URL",
    "APP_SECRET",
    "JWT_SECRET",
    "OWNER_OVERRIDE_KEY"
  ],
  "properties": {
    "NODE_ENV": { "type": "string", "enum": ["production", "staging", "development"] },
    "APP_ENV": { "type": "string" },
    "PORT": { "type": "string", "pattern": "^[0-9]+$" },
    "DATABASE_URL": { "type": "string", "minLength": 20 },
    "APP_SECRET": { "type": "string", "minLength": 16 },
    "JWT_SECRET": { "type": "string", "minLength": 16 },
    "OWNER_OVERRIDE_KEY": { "type": "string", "minLength": 24 },
    "FEATURE_FLAGS_ENABLED": { "type": "string", "enum": ["true", "false"] },
    "FRAUD_ENGINE_ENABLED": { "type": "string", "enum": ["true", "false"] },
    "AML_ENGINE_ENABLED": { "type": "string", "enum": ["true", "false"] },
    "RISK_ENGINE_ENABLED": { "type": "string", "enum": ["true", "false"] }
  },
  "additionalProperties": true
}
